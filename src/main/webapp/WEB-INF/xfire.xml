<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:org/codehaus/xfire/spring/xfire.xml"/>

    <bean id="baseWebService" class="org.codehaus.xfire.spring.remoting.XFireExporter" lazy-init="false"
          abstract="true">
        <property name="serviceFactory" ref="xfire.serviceFactory"/>
        <property name="xfire" ref="xfire"/>
    </bean>

    <bean id="helloService" parent="baseWebService">
        <property name="serviceBean" ref="helloServiceImpl"/>
        <property name="serviceClass" value="org.allen.imocker.webservice.HelloService"/>
    </bean>

    <bean id="JYWebservice" parent="baseWebService">
        <property name="serviceBean" ref="jyWebserviceImpl"/>
        <property name="serviceClass" value="org.allen.imocker.webservice.JYWebservice"/>
    </bean>
</beans>