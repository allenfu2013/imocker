<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ApiHeader">
    <insert id="insert" parameterType="org.allen.imocker.entity.ApiHeader">
        insert into api_header(
            api_doc_id,
            header_key,
            header_value
        ) values (
            #{apiDocId},
            #{headerKey},
            #{headerValue}
        )
    </insert>

    <sql id="all_columns">
        id id,
        api_doc_id apiDocId,
        header_key headerKey,
        header_value headerValue
    </sql>

    <select id="getByApiDocId" resultType="org.allen.imocker.entity.ApiHeader">
        select
        <include refid="all_columns"/>
        from api_header where api_doc_id = #{apiDocId}
    </select>

    <delete id="deleteByApiDocId">
        delete from api_header where api_doc_id = #{apiDocId}
    </delete>
</mapper>